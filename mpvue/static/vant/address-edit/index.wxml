 <view>
    <van-cell-group>
        <van-field
            value="{{ value }}"
            placeholder="请输入收货人"
            border="{{ false }}"
            bind:change="onChange"
            label="收货人"
        />
         <van-field
            value="{{ value }}"
            placeholder="请输入手机号"
            border="{{ false }}"
            bind:change="onChange"
            label="手机号"
        />
         <van-field
            value=""
            label="选择地区"
            placeholder="选择地区"
            readonly
            border="{{ false }}"
           bindtap="showAreaPopup"
        />
    </van-cell-group>
     <van-popup
      show="{{showArea}}"
      position="bottom"
    >
      <van-area area-list="{{areaList}}" />
    </van-popup>
 </view>
   